<mujoco>
    <include file="scene.xml"/>
    <include file="ned_dependencies.xml"/>

    <asset>
        <mesh name="lego_2x2" file="lego_2x2.obj"/>
    </asset>

    <equality>
        <weld body1="mocap_left" body2="ned_left/gripper_link" solref="0.01 1" solimp=".25 .25 0.001" />
        <weld body1="mocap_right" body2="ned_right/gripper_link" solref="0.01 1" solimp=".25 .25 0.001" />
    </equality>

    <worldbody>
        <include file="ned_left.xml" />
        <include file="ned_right.xml" />

        <body name="something">
            <site name="pickup_target" pos="0.05 0 0.2" size="0.01" rgba="1 0 0 1"/>
        </body>

        <body mocap="true" name="mocap_left" pos="-0.05 0 0.2">
            <site pos="0 0 0" size="0.003 0.003 0.03" type="box" name="mocap_left_site1" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.003 0.03 0.003" type="box" name="mocap_left_site2" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.03 0.003 0.003" type="box" name="mocap_left_site3" rgba="1 0 0 1"/>
        </body>
        <body mocap="true" name="mocap_right" pos="0.05 0 0.2">
            <site pos="0 0 0" size="0.003 0.003 0.03" type="box" name="mocap_right_site1" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.003 0.03 0.003" type="box" name="mocap_right_site2" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.03 0.003 0.003" type="box" name="mocap_right_site3" rgba="1 0 0 1"/>
        </body>

        <body name="lego_square" pos="0.2 0.15 0">
            <joint name="lego_square" type="free"/>
            <inertial mass="0.00135" pos="0 0 0" diaginertia="0.0001 0.0001 0.0001"/>
            <geom type="mesh" mesh="lego_2x2" size="1" class="visual" euler="1.57 0 0" rgba="0.75 0 0 1"/>
            <geom type="box" size="0.0075 0.0075 0.006" class="collision"
                  condim="4" solimp="2 1 0.01" solref="0.01 1" friction="1 0.005 0.0001"/>
        </body>
    </worldbody>

    <actuator>
        <position ctrllimited="true" ctrlrange="0 0.01191" joint="ned_left/left_finger" kp="200" user="1"/>
        <position ctrllimited="true" ctrlrange="0 0.01191" joint="ned_left/right_finger" kp="200" user="1"/>
        <position ctrllimited="true" ctrlrange="0 0.01191" joint="ned_right/left_finger" kp="200" user="1"/>
        <position ctrllimited="true" ctrlrange="0 0.01191" joint="ned_right/right_finger" kp="200" user="1"/>
    </actuator>

    <keyframe>
        <key name="default_pose"
             qpos=" 0 -2.09 1.57 0 0 0 0.006 0.006
                    0 -2.09 1.57 0 0 0 0.006 0.006
                    0.2 0.15 0 0.7071 0.7071 0 0
             "/>
    </keyframe>
</mujoco>